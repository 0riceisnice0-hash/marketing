---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Completing Sign In"
  description="Processing authentication"
>
  <div class="min-h-screen flex items-center justify-center bg-bg-base">
    <div class="text-center">
      <div class="inline-block animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-accent-primary mb-4"></div>
      <p class="text-text-secondary">Completing sign in...</p>
    </div>
  </div>
</BaseLayout>

<script>
  import { supabase } from '../../lib/supabase';
  
  // Handle OAuth callback
  async function handleCallback() {
    console.log('[OAuth Callback] Started');
    
    try {
      // Check for error in URL params (OAuth error from provider)
      const urlParams = new URLSearchParams(window.location.search);
      const errorParam = urlParams.get('error');
      const errorDescription = urlParams.get('error_description');
      const code = urlParams.get('code');
      
      console.log('[OAuth Callback] URL params:', { 
        hasError: !!errorParam, 
        hasCode: !!code 
      });
      
      if (errorParam) {
        console.error('[OAuth Callback] Provider error:', errorParam, errorDescription);
        window.location.href = `/signin?error=${encodeURIComponent(errorDescription || errorParam)}`;
        return;
      }
      
      if (!code) {
        console.error('[OAuth Callback] No authorization code in URL');
        window.location.href = '/signin?error=no_code';
        return;
      }
      
      // CRITICAL: Exchange the code for a session
      console.log('[OAuth Callback] Exchanging code for session...');
      const { data, error } = await supabase.auth.exchangeCodeForSession(code);
      
      if (error) {
        console.error('[OAuth Callback] Exchange failed:', error);
        window.location.href = `/signin?error=${encodeURIComponent(error.message)}`;
        return;
      }
      
      if (data.session) {
        console.log('[OAuth Callback] âœ“ Session created, user:', data.session.user?.email || data.session.user?.id);
        
        // Success - redirect to account
        window.location.href = '/account';
      } else {
        console.error('[OAuth Callback] No session after exchange');
        window.location.href = '/signin?error=no_session';
      }
    } catch (err: any) {
      console.error('[OAuth Callback] Unexpected error:', err);
      window.location.href = `/signin?error=${encodeURIComponent(err.message || 'callback_failed')}`;
    }
  }
  
  // Run on page load
  handleCallback();
</script>
