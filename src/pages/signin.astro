---
import BaseLayout from '../layouts/BaseLayout.astro';
import { AuthProvider } from '../components/auth/AuthProvider';
import { SignInForm } from '../components/auth/SignInForm';
---

<BaseLayout
  title="Sign In"
  description="Sign in to your Hydron Marketing account"
>
  <div class="min-h-screen flex items-center justify-center bg-bg-base py-12 px-4 sm:px-6 lg:px-8">
    <AuthProvider client:only="react">
      <SignInForm client:only="react" />
    </AuthProvider>
  </div>
</BaseLayout>
