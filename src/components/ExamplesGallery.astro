---
import { EXAMPLE_PROJECTS } from '../config/site';
---

<section class="py-20 bg-bg-base section-fade-in">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold font-heading text-text-primary mb-4">
        Example projects
      </h2>
      <p class="text-xl text-text-secondary mb-2">
        Example styles we can build for your business
      </p>
      <p class="text-sm text-text-tertiary">
        Examples shown for demonstration of design styles
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 icon-list">
      {EXAMPLE_PROJECTS.map((project) => (
        <a
          href={project.demoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="glass rounded-xl overflow-hidden hover:border-accent-primary/50 transition-all group icon-list-item card-lift block"
        >
          <div class="aspect-video bg-gradient-surface relative overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-accent-primary/10 to-accent-secondary/10"></div>
            <iframe
              src={project.demoUrl}
              class="absolute inset-0 w-full h-full pointer-events-none scale-[0.25] origin-top-left"
              style="width: 400%; height: 400%;"
              loading="lazy"
              title={`Preview of ${project.title}`}
            ></iframe>
            <div class="absolute inset-0 bg-gradient-to-t from-bg-base/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
              <div class="text-white font-semibold flex items-center gap-2">
                View Website
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </div>
            </div>
          </div>
          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-xl font-bold font-heading text-text-primary">{project.title}</h3>
              <span class="px-3 py-1 text-xs font-medium rounded-full bg-accent-primary/10 text-accent-primary">{project.industry}</span>
            </div>
            <p class="text-text-secondary text-sm leading-relaxed">{project.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
