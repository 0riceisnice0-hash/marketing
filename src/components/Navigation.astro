---
import type { Region } from '../config/site';
import RegionSwitcher from './RegionSwitcher.astro';

import { getBasePath } from '../utils/basePath';

interface Props {
  region: Region;
}

const { region } = Astro.props;
const basePath = getBasePath();

const navLinks = [
  { href: `${basePath}/${region}`, label: 'Home' },
  { href: `${basePath}/${region}/websites`, label: 'Websites' },
  { href: `${basePath}/${region}/pricing`, label: 'Pricing' },
  { href: `${basePath}/${region}/how-it-works`, label: 'How It Works' },
  { href: `${basePath}/${region}/contact`, label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<nav class="sticky top-0 z-50 glass border-b border-border-subtle">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href={`${basePath}/${region}`} class="text-xl font-bold font-heading gradient-text hover:opacity-80 transition-opacity">
          Hydron Marketing
        </a>
      </div>
      
      <div class="hidden md:flex items-center space-x-1">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'px-3 py-2 rounded-lg text-sm font-medium transition-all font-body',
              currentPath === link.href || currentPath === `${link.href}/`
                ? 'bg-accent-primary text-white shadow-glow-soft'
                : 'text-text-secondary hover:bg-bg-elevated hover:text-text-primary'
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>
      
      <div class="flex items-center space-x-2 sm:space-x-4">
        <RegionSwitcher currentRegion={region} />
        
        <!-- Shopping Cart Dropdown -->
        <div class="relative">
          <button
            id="cart-button"
            type="button"
            class="inline-flex items-center justify-center p-2 rounded-md text-text-secondary hover:text-text-primary hover:bg-bg-elevated focus:outline-none focus:ring-2 focus:ring-inset focus:ring-accent-primary transition-colors"
            aria-expanded="false"
            aria-label="Website packages menu"
            aria-haspopup="true"
          >
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </button>
          
          <!-- Dropdown Menu -->
          <div
            id="cart-dropdown"
            class="hidden absolute right-0 mt-2 w-72 glass rounded-xl shadow-xl border border-border-subtle overflow-hidden z-50"
            role="menu"
            aria-orientation="vertical"
            aria-labelledby="cart-button"
          >
            <div class="py-2">
              <a
                href={`${basePath}/${region}/pricing#basic`}
                class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-elevated transition-all"
                role="menuitem"
                tabindex="-1"
              >
                <div class="font-semibold">Basic Website Package</div>
                <div class="text-xs text-text-tertiary mt-1">Perfect for getting started</div>
              </a>
              <a
                href={`${basePath}/${region}/pricing#professional`}
                class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-elevated transition-all"
                role="menuitem"
                tabindex="-1"
              >
                <div class="font-semibold">Professional Website Package</div>
                <div class="text-xs text-text-tertiary mt-1">Most popular for growing businesses</div>
              </a>
              <a
                href={`${basePath}/${region}/pricing#enterprise`}
                class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-elevated transition-all"
                role="menuitem"
                tabindex="-1"
              >
                <div class="font-semibold">Enterprise Website Package</div>
                <div class="text-xs text-text-tertiary mt-1">Advanced features for large businesses</div>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Login/Account Dropdown -->
        <div class="relative">
          <button
            id="account-button"
            type="button"
            class="inline-flex items-center justify-center p-2 rounded-md text-text-secondary hover:text-text-primary hover:bg-bg-elevated focus:outline-none focus:ring-2 focus:ring-inset focus:ring-accent-primary transition-colors"
            aria-expanded="false"
            aria-label="Account menu"
            aria-haspopup="true"
          >
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </button>
          
          <!-- Account Dropdown Menu -->
          <div
            id="account-dropdown"
            class="hidden absolute right-0 mt-2 w-64 glass rounded-xl shadow-xl border border-border-subtle overflow-hidden z-50"
            role="menu"
            aria-orientation="vertical"
            aria-labelledby="account-button"
          >
            <!-- Not logged in state -->
            <div id="account-login" class="py-2">
              <button
                id="google-signin-button"
                class="w-full px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-elevated transition-all flex items-center gap-3"
                role="menuitem"
                tabindex="-1"
              >
                <svg class="h-5 w-5" viewBox="0 0 24 24">
                  <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                <span class="font-semibold">Continue with Google</span>
              </button>
            </div>
            
            <!-- Logged in state (hidden by default) -->
            <div id="account-menu" class="hidden py-2">
              <a
                href={`${basePath}/${region}/profile`}
                class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-elevated transition-all"
                role="menuitem"
                tabindex="-1"
              >
                <div class="font-semibold">Profile</div>
              </a>
              <a
                href={`${basePath}/${region}/orders`}
                class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-elevated transition-all"
                role="menuitem"
                tabindex="-1"
              >
                <div class="font-semibold">Orders</div>
              </a>
              <button
                id="logout-button"
                class="w-full text-left block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-elevated transition-all"
                role="menuitem"
                tabindex="-1"
              >
                <div class="font-semibold">Logout</div>
              </button>
            </div>
          </div>
        </div>
        
        <button
          id="mobile-menu-button"
          type="button"
          class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-text-secondary hover:text-text-primary hover:bg-bg-elevated focus:outline-none focus:ring-2 focus:ring-inset focus:ring-accent-primary transition-colors"
          aria-expanded="false"
          aria-label="Toggle navigation menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border-subtle bg-bg-elevated">
    <div class="px-2 pt-2 pb-3 space-y-1">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block px-3 py-2 rounded-md text-base font-medium transition-all font-body',
            currentPath === link.href || currentPath === `${link.href}/`
              ? 'bg-accent-primary text-white shadow-glow-soft'
              : 'text-text-secondary hover:bg-bg-surface hover:text-text-primary'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
      mobileMenu.classList.toggle('hidden');
    });
  }
  
  // Shopping cart dropdown toggle
  const cartButton = document.getElementById('cart-button');
  const cartDropdown = document.getElementById('cart-dropdown');
  
  if (cartButton && cartDropdown) {
    // Helper function to update tabindex for menu items
    const updateMenuItemsTabIndex = () => {
      const menuItems = cartDropdown.querySelectorAll('[role="menuitem"]');
      const isHidden = cartDropdown.classList.contains('hidden');
      menuItems.forEach((item) => {
        (item as HTMLElement).tabIndex = isHidden ? -1 : 0;
      });
    };
    
    // Helper function to close dropdown
    const closeDropdown = () => {
      cartButton.setAttribute('aria-expanded', 'false');
      cartDropdown.classList.add('hidden');
      updateMenuItemsTabIndex();
    };
    // Helper function to toggle dropdown
    const toggleDropdown = () => {
      const isExpanded = cartButton.getAttribute('aria-expanded') === 'true';
      cartButton.setAttribute('aria-expanded', String(!isExpanded));
      cartDropdown.classList.toggle('hidden');
      updateMenuItemsTabIndex();
    };
    
    // Toggle dropdown on click
    cartButton.addEventListener('click', (e) => {
      e.stopPropagation();
      toggleDropdown();
    });
    
    // Keyboard navigation
    cartButton.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        toggleDropdown();
      } else if (e.key === 'Escape') {
        closeDropdown();
        cartButton.focus();
      }
    });
    
    // Close dropdown on Escape key from within the dropdown
    cartDropdown.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeDropdown();
        cartButton.focus();
      }
    });
    
    
    // Initialize tabindex for menu items
    updateMenuItemsTabIndex();
  }
  
  // Account dropdown toggle
  const accountButton = document.getElementById('account-button');
  const accountDropdown = document.getElementById('account-dropdown');
  const googleSigninButton = document.getElementById('google-signin-button');
  const logoutButton = document.getElementById('logout-button');
  const accountLogin = document.getElementById('account-login');
  const accountMenu = document.getElementById('account-menu');
  
  if (accountButton && accountDropdown && accountLogin && accountMenu) {
    // Check if user is logged in (demo purposes - production would use proper auth)
    let isLoggedIn = localStorage.getItem('isLoggedIn') === 'true';
    
    // Helper function to update UI based on login state
    const updateAccountUI = () => {
      if (isLoggedIn) {
        accountLogin.classList.add('hidden');
        accountMenu.classList.remove('hidden');
      } else {
        accountLogin.classList.remove('hidden');
        accountMenu.classList.add('hidden');
      }
    };
    
    // Helper function to update tabindex for menu items
    const updateAccountMenuItemsTabIndex = () => {
      const menuItems = accountDropdown.querySelectorAll('[role="menuitem"]');
      const isHidden = accountDropdown.classList.contains('hidden');
      menuItems.forEach((item) => {
        (item as HTMLElement).tabIndex = isHidden ? -1 : 0;
      });
    };
    
    // Helper function to close dropdown
    const closeAccountDropdown = () => {
      accountButton.setAttribute('aria-expanded', 'false');
      accountDropdown.classList.add('hidden');
      updateAccountMenuItemsTabIndex();
    };
    
    // Helper function to toggle dropdown
    const toggleAccountDropdown = () => {
      const isExpanded = accountButton.getAttribute('aria-expanded') === 'true';
      accountButton.setAttribute('aria-expanded', String(!isExpanded));
      accountDropdown.classList.toggle('hidden');
      updateAccountMenuItemsTabIndex();
    };
    
    
    // Toggle dropdown on click
    accountButton.addEventListener('click', (e) => {
      e.stopPropagation();
      toggleAccountDropdown();
    });
    
    // Shared click handler for closing both dropdowns when clicking outside
    // (Already registered above for cart dropdown, handles both)
    
    // Keyboard navigation
    accountButton.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        toggleAccountDropdown();
      } else if (e.key === 'Escape') {
        closeAccountDropdown();
        accountButton.focus();
      }
    });
    
    // Close dropdown on Escape key from within the dropdown
    accountDropdown.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeAccountDropdown();
        accountButton.focus();
      }
    });
    
    // Google Sign-In handler (simulated for demo - production would use OAuth)
    if (googleSigninButton) {
      googleSigninButton.addEventListener('click', () => {
        // Production: Redirect to Google OAuth, handle authentication, store secure session
        // Demo: Alert to explain flow, then simulate login
        alert('Google Sign-In flow would be initiated here.\n\nIn production, this would:\n1. Redirect to Google OAuth\n2. Handle authentication\n3. Store user session\n\nSimulating login for demo...');
        isLoggedIn = true;
        localStorage.setItem('isLoggedIn', 'true');
        updateAccountUI();
        closeAccountDropdown();
      });
    }
    
    // Logout handler
    if (logoutButton) {
      logoutButton.addEventListener('click', () => {
        isLoggedIn = false;
        localStorage.removeItem('isLoggedIn');
        updateAccountUI();
        closeAccountDropdown();
      });
    }
    
    // Initialize UI and tabindex
    updateAccountUI();
    updateAccountMenuItemsTabIndex();
  }
  
  // Consolidated click handler to close dropdowns when clicking outside
  // This handles both cart and account dropdowns efficiently
  document.addEventListener('click', (e) => {
    const target = e.target;
    if (!target) return;
    
    // Close cart dropdown if clicking outside
    const cartBtn = document.getElementById('cart-button');
    const cartDrop = document.getElementById('cart-dropdown');
    if (cartBtn && cartDrop && !cartBtn.contains(target as Node) && !cartDrop.contains(target as Node)) {
      cartBtn.setAttribute('aria-expanded', 'false');
      cartDrop.classList.add('hidden');
      // Update tabindex for cart menu items
      const cartMenuItems = cartDrop.querySelectorAll('[role="menuitem"]');
      cartMenuItems.forEach((item) => {
        (item as HTMLElement).tabIndex = -1;
      });
    }
    
    // Close account dropdown if clicking outside
    const acctBtn = document.getElementById('account-button');
    const acctDrop = document.getElementById('account-dropdown');
    if (acctBtn && acctDrop && !acctBtn.contains(target as Node) && !acctDrop.contains(target as Node)) {
      acctBtn.setAttribute('aria-expanded', 'false');
      acctDrop.classList.add('hidden');
      // Update tabindex for account menu items
      const acctMenuItems = acctDrop.querySelectorAll('[role="menuitem"]');
      acctMenuItems.forEach((item) => {
        (item as HTMLElement).tabIndex = -1;
      });
    }
  });
</script>

<style>
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
