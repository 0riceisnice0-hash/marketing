---
import type { Region } from '../config/site';
import RegionSwitcher from './RegionSwitcher.astro';

interface Props {
  region: Region;
}

const { region } = Astro.props;
const basePath = '/marketing';

const navLinks = [
  { href: `${basePath}/${region}`, label: 'Home' },
  { href: `${basePath}/${region}/websites`, label: 'Websites' },
  { href: `${basePath}/${region}/pricing`, label: 'Pricing' },
  { href: `${basePath}/${region}/how-it-works`, label: 'How It Works' },
  { href: `${basePath}/${region}/examples`, label: 'Examples' },
  { href: `${basePath}/${region}/contact`, label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<nav class="sticky top-0 z-50 glass border-b border-border-subtle">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href={`${basePath}/${region}`} class="text-xl font-bold font-heading gradient-text hover:opacity-80 transition-opacity">
          Hydron Marketing
        </a>
      </div>
      
      <div class="hidden md:flex items-center space-x-1">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'px-3 py-2 rounded-lg text-sm font-medium transition-all font-body',
              currentPath === link.href || currentPath === `${link.href}/`
                ? 'bg-accent-primary text-white shadow-glow-soft'
                : 'text-text-secondary hover:bg-bg-elevated hover:text-text-primary'
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>
      
      <div class="flex items-center space-x-4">
        <RegionSwitcher currentRegion={region} />
        
        <!-- Shopping Cart Dropdown -->
        <div class="relative">
          <button
            id="cart-button"
            type="button"
            class="inline-flex items-center justify-center p-2 rounded-md text-text-secondary hover:text-text-primary hover:bg-bg-elevated focus:outline-none focus:ring-2 focus:ring-inset focus:ring-accent-primary transition-colors"
            aria-expanded="false"
            aria-label="Website packages menu"
            aria-haspopup="true"
          >
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </button>
          
          <!-- Dropdown Menu -->
          <div
            id="cart-dropdown"
            class="hidden absolute right-0 mt-2 w-72 glass rounded-xl shadow-xl border border-border-subtle overflow-hidden z-50"
            role="menu"
            aria-orientation="vertical"
            aria-labelledby="cart-button"
          >
            <div class="py-2">
              <a
                href={`${basePath}/${region}/pricing#basic`}
                class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-elevated transition-all"
                role="menuitem"
                tabindex="-1"
              >
                <div class="font-semibold">Basic Website Package</div>
                <div class="text-xs text-text-tertiary mt-1">Perfect for getting started</div>
              </a>
              <a
                href={`${basePath}/${region}/pricing#professional`}
                class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-elevated transition-all"
                role="menuitem"
                tabindex="-1"
              >
                <div class="font-semibold">Professional Website Package</div>
                <div class="text-xs text-text-tertiary mt-1">Most popular for growing businesses</div>
              </a>
              <a
                href={`${basePath}/${region}/pricing#enterprise`}
                class="block px-4 py-3 text-sm text-text-secondary hover:text-text-primary hover:bg-bg-elevated transition-all"
                role="menuitem"
                tabindex="-1"
              >
                <div class="font-semibold">Enterprise Website Package</div>
                <div class="text-xs text-text-tertiary mt-1">Advanced features for large businesses</div>
              </a>
            </div>
          </div>
        </div>
        
        <button
          id="mobile-menu-button"
          type="button"
          class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-text-secondary hover:text-text-primary hover:bg-bg-elevated focus:outline-none focus:ring-2 focus:ring-inset focus:ring-accent-primary transition-colors"
          aria-expanded="false"
          aria-label="Toggle navigation menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border-subtle bg-bg-elevated">
    <div class="px-2 pt-2 pb-3 space-y-1">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block px-3 py-2 rounded-md text-base font-medium transition-all font-body',
            currentPath === link.href || currentPath === `${link.href}/`
              ? 'bg-accent-primary text-white shadow-glow-soft'
              : 'text-text-secondary hover:bg-bg-surface hover:text-text-primary'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      mobileMenuButton.setAttribute('aria-expanded', String(!isExpanded));
      mobileMenu.classList.toggle('hidden');
    });
  }
  
  // Shopping cart dropdown toggle
  const cartButton = document.getElementById('cart-button');
  const cartDropdown = document.getElementById('cart-dropdown');
  
  if (cartButton && cartDropdown) {
    // Helper function to close dropdown
    const closeDropdown = () => {
      cartButton.setAttribute('aria-expanded', 'false');
      cartDropdown.classList.add('hidden');
      updateMenuItemsTabIndex();
    };
    
    // Helper function to update tabindex for menu items
    const updateMenuItemsTabIndex = () => {
      const menuItems = cartDropdown.querySelectorAll('[role="menuitem"]');
      const isHidden = cartDropdown.classList.contains('hidden');
      menuItems.forEach((item) => {
        (item as HTMLElement).tabIndex = isHidden ? -1 : 0;
      });
    };
    
    // Toggle dropdown on click
    cartButton.addEventListener('click', (e) => {
      e.stopPropagation();
      const isExpanded = cartButton.getAttribute('aria-expanded') === 'true';
      cartButton.setAttribute('aria-expanded', String(!isExpanded));
      cartDropdown.classList.toggle('hidden');
      updateMenuItemsTabIndex();
    });
    
    // Close dropdown when clicking outside
    document.addEventListener('click', (e) => {
      if (!cartButton.contains(e.target as Node) && !cartDropdown.contains(e.target as Node)) {
        closeDropdown();
      }
    });
    
    // Keyboard navigation
    cartButton.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        cartButton.click();
      } else if (e.key === 'Escape') {
        closeDropdown();
        cartButton.focus();
      }
    });
    
    // Close dropdown on Escape key from within the dropdown
    cartDropdown.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeDropdown();
        cartButton.focus();
      }
    });
    
    // Initialize tabindex for menu items
    updateMenuItemsTabIndex();
  }
</script>

<style>
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
