---
import type { Region } from '../config/site';
import { REGIONS } from '../config/site';

interface Props {
  region: Region;
}

const { region } = Astro.props;
const branchInfo = REGIONS[region];
---

<section class="py-20 bg-bg-base section-fade-in">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold font-heading text-text-primary mb-4 heading-reveal">
        Get in <span class="gradient-text heading-underline">touch</span>
      </h2>
      <p class="text-xl text-text-secondary heading-reveal anim-delay-1">
        Ready to get started? Send us a message.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div class="icon-list">
        <h3 class="text-xl font-bold font-heading text-text-primary mb-6 icon-list-item">{branchInfo.name}</h3>
        <div class="space-y-4">
          <div class="flex items-start glass rounded-lg p-4 hover:border-accent-primary/30 transition-all icon-list-item">
            <svg class="w-6 h-6 text-accent-primary mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <div>
              <p class="font-semibold text-text-primary">Location</p>
              <p class="text-text-secondary">{branchInfo.location}</p>
            </div>
          </div>
          
          <div class="flex items-start glass rounded-lg p-4 hover:border-accent-primary/30 transition-all icon-list-item">
            <svg class="w-6 h-6 text-accent-primary mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <div>
              <p class="font-semibold text-text-primary">Phone</p>
              <a href={`tel:${branchInfo.phone}`} class="text-accent-primary hover:text-accent-primary-hover transition-colors block">
                {branchInfo.phone}
              </a>
              {branchInfo.phoneUK && (
                <a href={`tel:${branchInfo.phoneUK}`} class="text-accent-primary hover:text-accent-primary-hover transition-colors block mt-1">
                  UK: {branchInfo.phoneUK}
                </a>
              )}
            </div>
          </div>
          
          <div class="flex items-start glass rounded-lg p-4 hover:border-accent-primary/30 transition-all icon-list-item">
            <svg class="w-6 h-6 text-accent-primary mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <div>
              <p class="font-semibold text-text-primary">Email</p>
              <a href={`mailto:${branchInfo.email}`} class="text-accent-primary hover:text-accent-primary-hover transition-colors">
                {branchInfo.email}
              </a>
            </div>
          </div>
          
          {branchInfo.whatsapp && (
            <div class="flex items-start glass rounded-lg p-4 hover:border-accent-primary/30 transition-all icon-list-item">
              <svg class="w-6 h-6 text-accent-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
              <div>
                <p class="font-semibold text-text-primary">WhatsApp</p>
                <a href={`https://wa.me/${branchInfo.whatsapp.replace(/[^0-9]/g, '')}`} class="text-accent-primary hover:text-accent-primary-hover transition-colors" target="_blank" rel="noopener noreferrer">
                  Send message
                </a>
              </div>
            </div>
          )}
        </div>
      </div>
      
      <!-- Contact Form -->
      <div class="glass rounded-xl p-6">
        <form
          action="https://formspree.io/f/YOUR_FORM_ID"
          method="POST"
          class="space-y-4"
          id="contact-form"
        >
          <!-- Honeypot field for spam prevention -->
          <input type="text" name="_gotcha" style="display:none" tabindex="-1" autocomplete="off" />
          
          <!-- Time-based hidden field -->
          <input type="hidden" name="form-submit-time" id="form-submit-time" value="" />
          
          <div>
            <label for="name" class="block text-sm font-medium text-text-primary mb-1">
              Name *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2 bg-bg-elevated border border-border-default rounded-lg focus:ring-2 focus:ring-accent-primary focus:border-accent-primary transition-colors text-text-primary"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-text-primary mb-1">
              Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 bg-bg-elevated border border-border-default rounded-lg focus:ring-2 focus:ring-accent-primary focus:border-accent-primary transition-colors text-text-primary"
            />
          </div>
          
          <div>
            <label for="phone" class="block text-sm font-medium text-text-primary mb-1">
              Phone
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-2 bg-bg-elevated border border-border-default rounded-lg focus:ring-2 focus:ring-accent-primary focus:border-accent-primary transition-colors text-text-primary"
            />
          </div>
          
          <div>
            <label for="package" class="block text-sm font-medium text-text-primary mb-1">
              Interested in
            </label>
            <select
              id="package"
              name="package"
              class="w-full px-4 py-2 bg-bg-elevated border border-border-default rounded-lg focus:ring-2 focus:ring-accent-primary focus:border-accent-primary transition-colors text-text-primary"
            >
              <option value="">Select a package</option>
              <option value="starter">Starter Websites</option>
              <option value="custom">Custom Website</option>
              <option value="business-plus">Business Website Plus</option>
              <option value="premium">Premium Website</option>
              <option value="other">Other / Not sure</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-text-primary mb-1">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-2 bg-bg-elevated border border-border-default rounded-lg focus:ring-2 focus:ring-accent-primary focus:border-accent-primary transition-colors text-text-primary"
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full btn-premium btn-glow btn-press px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-accent-primary hover:bg-accent-primary-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-primary transition-colors shadow-glow-soft hover:shadow-glow-primary"
          >
            Send message
          </button>
        </form>
        
        <p class="text-xs text-text-tertiary mt-4">
          This form uses Formspree. Update the form action URL with your Formspree endpoint.
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  // Time-based spam prevention
  const formLoadTime = Date.now();
  const form = document.getElementById('contact-form');
  const timeField = document.getElementById('form-submit-time');
  
  if (form && timeField) {
    form.addEventListener('submit', (e) => {
      const submitTime = Date.now();
      const timeElapsed = submitTime - formLoadTime;
      
      // If form submitted in less than 2 seconds, likely a bot
      if (timeElapsed < 2000) {
        e.preventDefault();
        alert('Please take a moment to review your message before submitting.');
        return;
      }
      
      (timeField as HTMLInputElement).value = String(timeElapsed);
    });
  }
</script>
