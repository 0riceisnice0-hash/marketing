---
import type { Region } from '../config/site';
import { TESTIMONIALS } from '../config/site';

interface Props {
  region: Region;
}

const { region } = Astro.props;
const testimonials = TESTIMONIALS[region];
---

<section class="py-20 bg-bg-elevated relative">
  <!-- Gradient divider at top -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-accent-secondary/50 to-transparent"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-4">
      <h2 class="text-3xl md:text-4xl font-bold font-heading text-text-primary mb-4">
        Example testimonials
      </h2>
      <p class="text-sm text-text-tertiary mb-12">
        Testimonials shown are examples for demonstration.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {testimonials.map((testimonial) => (
        <div class="glass rounded-xl p-6 hover:border-accent-primary/30 transition-all group">
          <div class="flex items-center mb-3">
            {[...Array(5)].map((_, i) => (
              <svg
                class:list={[
                  'w-5 h-5',
                  i < testimonial.rating ? 'text-yellow-400' : 'text-border-emphasis'
                ]}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <p class="text-text-secondary mb-4 italic leading-relaxed">"{testimonial.content}"</p>
          <div class="flex items-center">
            <div class="w-10 h-10 rounded-full bg-gradient-primary flex items-center justify-center text-white font-bold font-heading mr-3 shadow-glow-soft">
              {testimonial.name.charAt(0)}
            </div>
            <div>
              <p class="font-semibold text-text-primary">{testimonial.name}</p>
              <p class="text-sm text-text-tertiary">{testimonial.business}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <p class="text-center text-sm text-text-tertiary mt-8">
      Client feedback shown for demonstration
    </p>
  </div>
</section>
